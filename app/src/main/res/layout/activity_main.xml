<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mars_bgnd"
    tools:context=".MainActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/idIVlogo"
        android:layout_width="189dp"
        android:layout_marginTop="75dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_logo"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/idTVwlcm_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="65dp"
        android:text="@string/aarohan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/rampartone_regular"
        android:textSize="58sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idIVlogo" />

    <TextView
        android:id="@+id/idTVwlcm_msg_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/by_team_aavishkar"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/rampartone_regular"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTVwlcm_msg" />

    <TextView
        android:id="@+id/google_signin"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@drawable/custom_signin"
        app:layout_constraintTop_toBottomOf="@+id/idTVwlcm_msg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/sign_in_with_google"
        android:layout_marginTop="200dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/ic_google"
        android:layout_width="34dp"
        android:layout_height="29dp"
        android:layout_marginEnd="248dp"
        app:layout_constraintBottom_toBottomOf="@+id/google_signin"
        app:layout_constraintEnd_toEndOf="@+id/google_signin"
        app:layout_constraintTop_toTopOf="@+id/google_signin"
        app:layout_constraintVertical_bias="0.578"
        app:srcCompat="@drawable/icons_google" />



</androidx.constraintlayout.widget.ConstraintLayout>