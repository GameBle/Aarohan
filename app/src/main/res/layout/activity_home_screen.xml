<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/mars_rocket"
    tools:context=".HomeScreen">

    <TextView
        android:id = "@+id/idTVHeading"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text = "@string/aarohan"
        android:gravity = "center"
        android:textColor = "#FF000000"
        android:textSize = "28sp"
        android:fontFamily = "@font/rampartone_regular"
        android:background="@drawable/custom_text_cards"
        android:layout_marginTop="25dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ic_heading_logo"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/idTVHeading"
        app:layout_constraintStart_toStartOf="@+id/idTVHeading"
        app:layout_constraintTop_toTopOf="@+id/idTVHeading"
        android:src="@drawable/ic_logo" />

    <ImageView
        android:id = "@+id/search_icon"
        android:layout_width="34dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/idTVHeading"
        app:layout_constraintEnd_toEndOf="@+id/idTVHeading"
        app:layout_constraintTop_toTopOf="@+id/idTVHeading"
        android:layout_marginEnd="32dp"
        android:src = "@drawable/ic_search"
        />

    <TextView
        android:id = "@+id/header_tabs"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/idTVHeading"
        app:layout_constraintStart_toStartOf="@+id/idTVHeading"
        app:layout_constraintEnd_toEndOf="@+id/idTVHeading"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_text_cards">
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>